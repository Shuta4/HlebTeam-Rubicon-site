<div class="work-form">
  <h3 class="work-form__title">
    <%if (create_new) {%>
      Создание работы...
    <%} else {%>
      Редактирование...
    <%}%>
  </h3>
	<form class="work-form__form">
    <div class="work-form__form__preview-image">
        <div class="work-form__form__preview-image__add">+</div>
      <!-- <div class="swiper-slide"><img class="work-form__form__preview-image__image" src="/img/site-bonpass-temp.jpg" alt="Фото работы"></div> -->
    </div>
    <input type="text" name="title" class="work-form__form__title" placeholder="Название работы">
    <textarea class="work-form__form__description" placeholder="Описание"></textarea>
    <input type="text" name="download_link" class="work-form__form__link" placeholder="Ссылка на скачивание">
    </form>
</div>
<script src="/js/create_work.js"></script>